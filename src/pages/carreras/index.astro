  { nombre: 'Ing. Computacional', slug: 'ingenieria-computacional', foto: '/images/photos/computer-coding.jpg', tipo: 'regulada' as const, descripcionCorta: 'Requiere 50% de créditos. Para profesionales de TI y desarrollo.' },
