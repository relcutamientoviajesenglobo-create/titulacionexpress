  { nombre: 'Lic. en Administración', slug: 'administracion', foto: '/images/photos/business-meeting.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para gerentes y directores empresariales.' },
  { nombre: 'Lic. en Mercadotecnia', slug: 'mercadotecnia', foto: '/images/photos/marketing-strategy.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para especialistas en marketing y ventas.' },
  { nombre: 'Lic. en Pedagogía', slug: 'pedagogia', foto: '/images/photos/teacher-classroom.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para educadores y formadores con experiencia.' },
  { nombre: 'Lic. en Ciencias de la Comunicación', slug: 'ciencias-de-la-comunicacion', foto: '/images/photos/communication-media.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para periodistas y comunicadores.' },
  { nombre: 'Lic. en Turismo', slug: 'turismo', foto: '/images/photos/tourism-travel.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para operadores y gestores turísticos.' },
  { nombre: 'Lic. en Gastronomía', slug: 'gastronomia', foto: '/images/photos/chef-kitchen.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para chefs y profesionales culinarios.' },
  { nombre: 'Lic. en Diseño Gráfico', slug: 'diseno-grafico', foto: '/images/photos/design-creative.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para diseñadores y creativos visuales.' },
  { nombre: 'Lic. en Economía', slug: 'economia', foto: '/images/photos/economics-charts.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para analistas y consultores económicos.' },
  { nombre: 'Lic. en Comercio Internacional', slug: 'comercio-internacional', foto: '/images/photos/international-trade.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para profesionales de importación y exportación.' },
  { nombre: 'Lic. en Ciencias Políticas', slug: 'ciencias-politicas', foto: '/images/photos/political-science.jpg', tipo: 'no-regulada' as const, descripcionCorta: 'Sin requisito de créditos. Para funcionarios y analistas del sector público.' },
