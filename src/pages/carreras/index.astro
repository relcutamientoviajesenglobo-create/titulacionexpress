  { nombre: 'Lic. en Derecho', slug: 'derecho', foto: '/images/photos/lawyer-scales.jpg', tipo: 'regulada' as const, descripcionCorta: 'Requiere 50% de créditos. Para profesionales del ámbito jurídico.' },
