<CarreraLayout
  heroImage="/images/photos/international-trade.jpg"
  nombre="Comercio Internacional"
  slug="comercio-internacional"
  tipo="no-regulada"
  keyword="licenciatura en comercio internacional por experiencia laboral"
  description="Titúlate en Comercio Internacional por experiencia laboral con el Acuerdo 286. Sin créditos previos. Para profesionales de importación, exportación y logística internacional."
