</header>

<style>
  /* --- Header Base ‚Äî Premium --- */
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    height: var(--header-height);
    transition: box-shadow 0.3s, background 0.3s;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  /* --- Logo --- */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--color-primary-dark);
    font-size: 1.125rem;
    flex-shrink: 0;
  }

  .header__logo-icon { font-size: 1.5rem; }
  .header__logo-text strong { font-weight: 800; }

  /* --- Desktop Nav --- */
  .header__nav { display: none; }

  .header__menu {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    list-style: none;
  }

  .header__link {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: var(--space-sm) var(--space-md);
    color: var(--color-gray-700);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: color var(--transition-fast), background var(--transition-fast);
    white-space: nowrap;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
  }

  .header__link:hover {
    color: var(--color-primary);
    background: var(--color-gray-50);
  }

  .header__link:active {
    transform: scale(0.97);
  }

  .header__link--cta {
    padding: 0.5rem 1.25rem;
    font-size: 0.875rem;
  }

  .header__chevron {
    font-size: 0.625rem;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
  }

  /* --- Mega Menu (Desktop: hover) ‚Äî Premium --- */
  .mega-menu {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background: var(--color-white);
    border-top: none;
    box-shadow:
      0 25px 60px rgba(0, 0, 0, 0.12),
      0 8px 20px rgba(0, 0, 0, 0.06),
      0 0 0 1px rgba(0, 0, 0, 0.04);
    opacity: 0;
    visibility: hidden;
    transform: translateY(8px) scale(0.98);
    transform-origin: top center;
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      visibility 0.3s;
    z-index: 999;
    border-radius: 0 0 16px 16px;
    overflow: hidden;
  }

  .header__item--mega:hover .mega-menu,
  .header__item--mega:focus-within .mega-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .header__item--mega:hover .header__chevron {
    transform: rotate(180deg);
  }

  /* Active indicator on trigger */
  .header__item--mega:hover .header__link--dropdown,
  .header__item--mega:focus-within .header__link--dropdown {
    color: var(--color-primary);
    background: var(--color-gray-50);
  }

  .mega-menu__inner {
    display: grid;
    grid-template-columns: 1fr 1.5fr 1fr;
    gap: 0;
    padding: 0;
  }

  /* Columns with subtle separators */
  .mega-menu__col {
    padding: 1.75rem 2rem;
    transition: background 0.2s;
  }

  .mega-menu__col:not(:last-child) {
    border-right: 1px solid var(--color-gray-100);
  }

  .mega-menu__col:hover {
    background: rgba(0, 0, 0, 0.01);
  }

  /* Recursos column with accent background */
  .mega-menu__col--recursos {
    background: linear-gradient(135deg, rgba(232, 168, 56, 0.04) 0%, rgba(232, 168, 56, 0.02) 100%);
  }

  .mega-menu__col--recursos:hover {
    background: linear-gradient(135deg, rgba(232, 168, 56, 0.07) 0%, rgba(232, 168, 56, 0.03) 100%);
  }

  .mega-menu__heading {
    font-size: 0.6875rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 4px;
    padding-bottom: 0;
  }

  .mega-menu__subtext {
    font-size: 0.6875rem;
    color: var(--color-gray-400);
    margin-bottom: 1rem;
    font-weight: 400;
  }

  .mega-menu__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .mega-menu__link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    color: var(--color-gray-700);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 450;
    border-radius: 8px;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .mega-menu__link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%) scaleY(0);
    width: 3px;
    height: 60%;
    background: var(--color-accent);
    border-radius: 0 4px 4px 0;
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mega-menu__link:hover {
    background: var(--color-gray-50);
    color: var(--color-primary-dark);
    padding-left: 18px;
  }

  .mega-menu__link:hover::before {
    transform: translateY(-50%) scaleY(1);
  }

  /* Ver todas CTA button */
  .mega-menu__ver-todas {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-top: 1.25rem;
    padding: 0.625rem 1rem;
    font-size: 0.8125rem;
    font-weight: 700;
    color: var(--color-white);
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-dark) 100%);
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(232, 168, 56, 0.2);
  }

  .mega-menu__ver-todas:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 14px rgba(232, 168, 56, 0.35);
  }

  /* --- Mobile Toggle --- */
  .header__mobile-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .header__hamburger,
  .header__hamburger::before,
  .header__hamburger::after {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--color-gray-800);
    border-radius: 2px;
    transition: all var(--transition-base);
  }

  .header__hamburger {
    position: relative;
  }

  .header__hamburger::before,
  .header__hamburger::after {
    content: '';
    position: absolute;
    left: 0;
  }

  .header__hamburger::before { top: -7px; }
  .header__hamburger::after { top: 7px; }

  /* Active state */
  .header__mobile-toggle[aria-expanded="true"] .header__hamburger {
    background: transparent;
  }
  .header__mobile-toggle[aria-expanded="true"] .header__hamburger::before {
    transform: rotate(45deg);
    top: 0;
  }
  .header__mobile-toggle[aria-expanded="true"] .header__hamburger::after {
    transform: rotate(-45deg);
    top: 0;
  }

  /* --- Mobile Nav --- */
  .mobile-nav {
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-white);
    overflow-y: auto;
    padding: var(--space-lg);
    z-index: 998;
  }

  .mobile-nav[hidden] { display: none; }

  .mobile-nav__menu {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .mobile-nav__link {
    display: block;
    padding: var(--space-md);
    color: var(--color-gray-800);
    text-decoration: none;
    font-size: 1.0625rem;
    font-weight: 500;
    border-radius: var(--radius-md);
  }

  .mobile-nav__link:hover {
    background: var(--color-gray-50);
  }

  .mobile-nav__link--cta {
    margin-top: var(--space-md);
    background: var(--color-accent);
    color: var(--color-primary-dark);
    font-weight: 700;
    text-align: center;
    border-radius: var(--radius-md);
  }

  .mobile-nav__details summary {
    padding: 0;
    border: none;
    font-weight: 500;
  }

  .mobile-nav__details summary::after { display: none; }

  .mobile-nav__sub {
    padding: var(--space-sm) 0 var(--space-sm) var(--space-lg);
  }

  .mobile-nav__sub-heading {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-400);
    padding: var(--space-sm) var(--space-sm) var(--space-xs);
    margin: 0;
  }

  .mobile-nav__sub-link {
    display: block;
    padding: var(--space-sm);
    color: var(--color-gray-600);
    text-decoration: none;
    font-size: 0.9375rem;
    border-radius: var(--radius-sm);
  }

  .mobile-nav__sub-link:hover {
    background: var(--color-gray-50);
    color: var(--color-primary);
  }

  .mobile-nav__sub-link--all {
    color: var(--color-accent-dark);
    font-weight: 600;
    margin-top: var(--space-sm);
  }

  /* --- Desktop breakpoint --- */
  @media (min-width: 1024px) {
    .header__nav { display: flex; }
    .header__mobile-toggle { display: none; }
    .mobile-nav { display: none !important; }
  }
</style>

<script>
  // Mobile menu toggle ‚Äî vanilla JS, minimal
  const toggle = document.getElementById('mobile-toggle');
  const mobileNav = document.getElementById('mobile-nav');

  if (toggle && mobileNav) {
    toggle.addEventListener('click', () => {
      const isOpen = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!isOpen));
      mobileNav.hidden = isOpen;
      document.body.style.overflow = isOpen ? '' : 'hidden';
    });
  }

  // Header scroll shadow
  const header = document.getElementById('header');
  if (header) {
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          if (window.scrollY > 10) {
            header.style.boxShadow = '0 4px 20px rgba(0,0,0,0.06)';
            header.style.borderBottomColor = 'transparent';
          } else {
            header.style.boxShadow = 'none';
            header.style.borderBottomColor = 'rgba(0,0,0,0.06)';
          }
          ticking = false;
        });
        ticking = true;
      }
    });
  }
</script>
