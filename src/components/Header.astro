      <li><a href="/titulacion-por-experiencia-laboral/" class="mobile-nav__link">Titulaci√≥n por Experiencia</a></li>
      <li>
        <details class="mobile-nav__details">
          <summary class="mobile-nav__link">Carreras <span aria-hidden="true">‚ñæ</span></summary>
          <div class="mobile-nav__sub">
            <p class="mobile-nav__sub-heading">Reguladas</p>
            {carrerasReguladas.map(c => (
              <a href={`/carreras/${c.slug}/`} class="mobile-nav__sub-link">{c.nombre}</a>
            ))}
            <p class="mobile-nav__sub-heading">No Reguladas</p>
            {carrerasNoReguladas.map(c => (
              <a href={`/carreras/${c.slug}/`} class="mobile-nav__sub-link">{c.nombre}</a>
            ))}
