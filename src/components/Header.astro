    <!-- Desktop Navigation -->
    <nav class="header__nav" aria-label="Navegaci√≥n principal">
      <ul class="header__menu">
        <li class="header__item">
          <a href="/titulacion-por-experiencia-laboral/" class="header__link">
            Titulaci√≥n
          </a>
        </li>

        <!-- Carreras Mega Menu -->
        <li class="header__item header__item--mega">
